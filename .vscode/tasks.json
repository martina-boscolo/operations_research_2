{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Project",
            "type": "shell",
            "command": "mingw32-make",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run C Program",
            "type": "shell",
            "command": "${workspaceFolder}/program.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
